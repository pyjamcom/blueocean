{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ws/join.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["roomCode", "playerId", "avatarId"],
  "properties": {
    "roomCode": {
      "type": "string",
      "minLength": 4,
      "maxLength": 6,
      "pattern": "^[A-Z0-9]+$"
    },
    "playerId": {"type": "string", "minLength": 1},
    "avatarId": {"type": "string", "minLength": 1}
  }
}
